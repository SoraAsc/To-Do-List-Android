<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>


    <style name="AppTheme.Create.Task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/Button.Style</item>
    </style>

    <!--Create Task Button Style-->
    <style name="Button.Style" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/inverse_text_color</item>
        <item name="android:backgroundTint">@color/default_text_color</item>
    </style>

    <style name="TextInput.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input</item>
        <item name="hintTextColor">@color/default_text_color</item>
    </style>

</resources>